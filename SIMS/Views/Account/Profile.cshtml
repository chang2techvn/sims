@model SIMS.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-user"></i> Profile Information</h5>
            </div>
            <div class="card-body text-center">
                <div class="user-avatar mb-4">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Model.Avatar" alt="Avatar" class="rounded-circle" width="150" height="150">
                    }
                    else
                    {
                        <i class="fas fa-user-circle" style="font-size: 150px; color: var(--primary-orange);"></i>
                    }
                </div>
                <h4 class="card-title">@Model.Name</h4>
                <p class="text-muted text-capitalize">@Model.Role</p>
                @if (!string.IsNullOrEmpty(Model.StudentCode))
                {
                    <span class="badge bg-info mb-2">@Model.StudentCode</span>
                }
                @if (!string.IsNullOrEmpty(Model.MajorName))
                {
                    <span class="badge bg-primary">@Model.MajorName</span>
                }
                @if (!string.IsNullOrEmpty(Model.DepartmentName))
                {
                    <span class="badge bg-secondary">@Model.DepartmentName</span>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-info-circle"></i> Personal Details</h5>
                <button class="btn btn-primary btn-sm" id="editProfileBtn">
                    <i class="fas fa-edit"></i> Edit Profile
                </button>
            </div>
            <div class="card-body">
                <form id="profileForm">
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-user text-primary"></i> Name:</strong></label>
                        <div class="col-md-9">
                            <input type="text" class="form-control profile-field" id="Name" name="Name" value="@Model.Name" readonly>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-envelope text-primary"></i> Email:</strong></label>
                        <div class="col-md-9">
                            <input type="email" class="form-control" value="@Model.Email" readonly>
                            <small class="text-muted">Cannot be changed</small>
                        </div>
                    </div>
                    
                    @if (Model.Role.ToLower() == "student")
                    {
                        <div class="row mb-3">
                            <label class="col-md-3 col-form-label"><strong><i class="fas fa-id-card text-info"></i> Student Code:</strong></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control profile-field" id="StudentCode" name="StudentCode" value="@Model.StudentCode" placeholder="BC00132" readonly>
                            </div>
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-phone text-success"></i> Phone:</strong></label>
                        <div class="col-md-9">
                            <input type="tel" class="form-control profile-field" id="Phone" name="Phone" value="@Model.Phone" readonly>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-birthday-cake text-warning"></i> Date of Birth:</strong></label>
                        <div class="col-md-9">
                            <input type="date" class="form-control profile-field" id="DateOfBirth" name="DateOfBirth" 
                                   value="@(Model.DateOfBirth?.ToString("yyyy-MM-dd"))" readonly>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-venus-mars text-info"></i> Gender:</strong></label>
                        <div class="col-md-9">
                            <select class="form-select profile-field" id="Gender" name="Gender" disabled>
                                <option value="">Not specified</option>
                                <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                                <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                                <option value="Other" selected="@(Model.Gender == "Other")">Other</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label class="col-md-3 col-form-label"><strong><i class="fas fa-map-marker-alt text-danger"></i> Address:</strong></label>
                        <div class="col-md-9">
                            <textarea class="form-control profile-field" id="Address" name="Address" rows="3" readonly>@Model.Address</textarea>
                        </div>
                    </div>
                    
                    <div class="row mt-4 d-none" id="saveButtons">
                        <div class="col-md-12 text-end">
                            <button type="button" class="btn btn-secondary" id="cancelBtn">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" id="saveBtn">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let isEditing = false;
    
    $('#editProfileBtn').on('click', function() {
        if (!isEditing) {
            // Enable editing
            $('.profile-field').prop('readonly', false).prop('disabled', false);
            $('#Gender').prop('disabled', false);
            $('#saveButtons').removeClass('d-none');
            $(this).html('<i class="fas fa-times"></i> Cancel Edit');
            isEditing = true;
        } else {
            // Cancel editing
            location.reload();
        }
    });
    
    $('#cancelBtn').on('click', function() {
        location.reload();
    });
    
    $('#profileForm').on('submit', function(e) {
        e.preventDefault();
        
        const data = {
            Name: $('#Name').val(),
            Phone: $('#Phone').val() || null,
            StudentCode: $('#StudentCode').val() || null,
            DateOfBirth: $('#DateOfBirth').val() ? new Date($('#DateOfBirth').val()).toISOString() : null,
            Gender: $('#Gender').val() || null,
            Address: $('#Address').val() || null
        };
        
        // Show loading
        $('#saveBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Saving...');
        
        $.ajax({
            url: '@Url.Action("UpdateProfile", "Account")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                if (response.success) {
                    alert('Profile updated successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + response.message);
                    $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save"></i> Save Changes');
                }
            },
            error: function() {
                alert('Error updating profile. Please try again.');
                $('#saveBtn').prop('disabled', false).html('<i class="fas fa-save"></i> Save Changes');
            }
        });
    });
</script>
}
