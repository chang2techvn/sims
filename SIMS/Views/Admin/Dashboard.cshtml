@{
    ViewData["Title"] = "Dashboard";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="header-content">
        <h1 class="dashboard-title">
            <i class="fas fa-tachometer-alt"></i>
            Dashboard
        </h1>
        <p class="dashboard-subtitle">Welcome back, @ViewBag.UserName! Here's what's happening with your system today.</p>
    </div>
    <div class="header-actions">
        <div class="current-date">
            <i class="fas fa-calendar-day"></i>
            @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
        </div>
    </div>
</div>

<!-- Statistics Cards -->
@if (ViewBag.UserRole == "admin")
{
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalStudents</div>
                <div class="stat-label">Total Students</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+12%</span>
                </div>
            </div>
        </div>

        <div class="stat-card success">
            <div class="stat-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalCourses</div>
                <div class="stat-label">Total Courses</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+5%</span>
                </div>
            </div>
        </div>

        <div class="stat-card info">
            <div class="stat-icon">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalLecturers</div>
                <div class="stat-label">Total Lecturers</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+8%</span>
                </div>
            </div>
        </div>

        <div class="stat-card warning">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Total Users</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+15%</span>
                </div>
            </div>
        </div>

        <div class="stat-card secondary">
            <div class="stat-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalDepartments</div>
                <div class="stat-label">Departments</div>
                <div class="stat-trend">
                    <i class="fas fa-equals"></i>
                    <span>Stable</span>
                </div>
            </div>
        </div>

        <div class="stat-card accent">
            <div class="stat-icon">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalMajors</div>
                <div class="stat-label">Majors</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+3%</span>
                </div>
            </div>
        </div>

        <div class="stat-card tertiary">
            <div class="stat-icon">
                <i class="fas fa-list"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalSubjects</div>
                <div class="stat-label">Subjects</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up"></i>
                    <span>+7%</span>
                </div>
            </div>
        </div>

        <div class="stat-card quaternary">
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalSemesters</div>
                <div class="stat-label">Semesters</div>
                <div class="stat-trend">
                    <i class="fas fa-plus"></i>
                    <span>New</span>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.UserRole == "lecturer")
{
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-icon">
                <i class="fas fa-chalkboard"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.MyCourses</div>
                <div class="stat-label">My Courses</div>
            </div>
        </div>

        <div class="stat-card success">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.MyStudents</div>
                <div class="stat-label">My Students</div>
            </div>
        </div>
    </div>
}

@if (ViewBag.UserRole == "student")
{
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.MyCourses</div>
                <div class="stat-label">Enrolled Courses</div>
            </div>
        </div>
    </div>
}

<!-- Main Content Grid -->
<div class="dashboard-grid">
    <!-- Quick Actions -->
    <div class="dashboard-card">
        <div class="card-header">
            <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
            <p>Access frequently used features</p>
        </div>
        <div class="card-content">
            @if (ViewBag.UserRole == "admin")
            {
                <div class="action-grid">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Users</h4>
                            <p>Add, edit, or remove system users</p>
                        </div>
                    </a>

                    <a href="@Url.Action("ManageCourses", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Courses</h4>
                            <p>Create and organize course offerings</p>
                        </div>
                    </a>

                    <a href="@Url.Action("AssignStudentToCourse", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="action-content">
                            <h4>Assign Students</h4>
                            <p>Enroll students in courses</p>
                        </div>
                    </a>

                    <a href="@Url.Action("ManageDepartments", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Departments</h4>
                            <p>Configure academic departments</p>
                        </div>
                    </a>

                    <a href="@Url.Action("ManageMajors", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Majors</h4>
                            <p>Set up academic majors</p>
                        </div>
                    </a>

                    <a href="@Url.Action("ManageSubjects", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Subjects</h4>
                            <p>Define course subjects</p>
                        </div>
                    </a>

                    <a href="@Url.Action("ManageSemesters", "Admin")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="action-content">
                            <h4>Manage Semesters</h4>
                            <p>Configure academic semesters</p>
                        </div>
                    </a>

                    <a href="@Url.Action("Index", "Home")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="action-content">
                            <h4>View Reports</h4>
                            <p>Access system reports and analytics</p>
                        </div>
                    </a>

                    <a href="@Url.Action("Profile", "Account")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-cog"></i>
                        </div>
                        <div class="action-content">
                            <h4>System Settings</h4>
                            <p>Configure system preferences</p>
                        </div>
                    </a>
                </div>
            }

            @if (ViewBag.UserRole == "lecturer")
            {
                <div class="action-grid">
                    <a href="@Url.Action("MyCourses", "Lecturer")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-chalkboard"></i>
                        </div>
                        <div class="action-content">
                            <h4>My Courses</h4>
                            <p>View and manage your courses</p>
                        </div>
                    </a>
                </div>
            }

            @if (ViewBag.UserRole == "student")
            {
                <div class="action-grid">
                    <a href="@Url.Action("MyCourses", "Student")" class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div class="action-content">
                            <h4>My Courses</h4>
                            <p>View enrolled courses</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Recent Activity / Enrollment Logs -->
    <div class="dashboard-card">
        <div class="card-header">
            <h3><i class="fas fa-history"></i> Recent Enrollment Activity</h3>
            <p>Latest student enrollments and course assignments</p>
        </div>
        <div class="card-content">
            <div class="activity-list">
                <!-- Sample activity items - in real app, this would come from database -->
                <div class="activity-item">
                    <div class="activity-icon success">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Student enrolled in course</div>
                        <div class="activity-details">John Doe enrolled in "Introduction to Programming" by Dr. Smith</div>
                        <div class="activity-time">2 hours ago</div>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon success">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Student enrolled in course</div>
                        <div class="activity-details">Jane Smith enrolled in "Data Structures" by Prof. Johnson</div>
                        <div class="activity-time">4 hours ago</div>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon warning">
                        <i class="fas fa-user-minus"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Student unenrolled</div>
                        <div class="activity-details">Bob Wilson unenrolled from "Advanced Mathematics"</div>
                        <div class="activity-time">1 day ago</div>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon success">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Bulk enrollment completed</div>
                        <div class="activity-details">15 students enrolled in "Computer Science 101"</div>
                        <div class="activity-time">2 days ago</div>
                    </div>
                </div>

                <div class="activity-item">
                    <div class="activity-icon info">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Course assignment updated</div>
                        <div class="activity-details">Dr. Smith assigned to "Web Development" course</div>
                        <div class="activity-time">3 days ago</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>