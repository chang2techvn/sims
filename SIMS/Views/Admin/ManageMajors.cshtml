@model List<SIMS.Models.Major>
@{
    ViewData["Title"] = "Manage Majors";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-graduation-cap"></i> Majors List</h5>
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="majorSearchInput" class="form-control search-input" placeholder="Search majors...">
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table id="majorsTable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Major Name</th>
                                    <th>Department</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var major in Model)
                                {
                                    <tr style="cursor: pointer;" onclick="editMajor(@major.MajorId)" data-major-id="@major.MajorId">
                                        <td>@major.MajorId</td>
                                        <td>
                                            <strong>@major.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@major.Department.Name</span>
                                        </td>
                                        <td onclick="event.stopPropagation()">
                                            <button class="btn btn-link text-primary p-0 me-2" onclick="editMajor(@major.MajorId)" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-link text-danger p-0" onclick="deleteMajor(@major.MajorId, '@major.Name')" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("_Pagination")
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-graduation-cap text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No majors found. Create your first major!</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plus"></i> Add New Major</h5>
            </div>
            <div class="card-body">
                <form id="createMajorForm">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-graduation-cap"></i> Major Name
                        </label>
                        <input name="Name" class="form-control" placeholder="Enter major name" required />
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-building"></i> Department
                        </label>
                        @{
                            ViewBag.Id = "createDepartment";
                            ViewBag.Name = "DepartmentId";
                            ViewBag.Placeholder = "Search and select department...";
                            ViewBag.Label = "";
                            ViewBag.Icon = "";
                            ViewBag.Items = (ViewBag.Departments as List<SIMS.Models.Department>)?.Select(d => new { Id = d.DepartmentId, Name = d.Name });
                        }
                        @Html.Partial("_SearchableDropdown")
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-plus"></i> Add Major
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-chart-pie"></i> Majors by Department</h6>
            </div>
            <div class="card-body">
                @foreach (var deptGroup in Model.GroupBy(m => m.Department.Name))
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <small>@deptGroup.Key</small>
                            <small class="badge bg-primary">@deptGroup.Count()</small>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" style="width: @(deptGroup.Count() * 100.0 / Model.Count)%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Major Modal -->
<div class="modal fade" id="editMajorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Major</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editMajorForm">
                    <input type="hidden" id="editMajorId" name="MajorId" />
                    
                    <div class="form-group mb-3">
                        <label class="form-label">
                            <i class="fas fa-graduation-cap"></i> Major Name
                        </label>
                        <input type="text" id="editMajorName" name="Name" class="form-control" required />
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">
                            <i class="fas fa-building"></i> Department
                        </label>
                        @{
                            ViewBag.Id = "editDepartment";
                            ViewBag.Name = "DepartmentId";
                            ViewBag.Placeholder = "Search and select department...";
                            ViewBag.Label = "";
                            ViewBag.Icon = "";
                            ViewBag.Items = (ViewBag.Departments as List<SIMS.Models.Department>)?.Select(d => new { Id = d.DepartmentId, Name = d.Name });
                        }
                        @Html.Partial("_SearchableDropdown")
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateMajor()">
                    <i class="fas fa-save"></i> Update Major
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Major Modal -->
<div class="modal fade" id="deleteMajorModal" tabindex="-1" aria-labelledby="deleteMajorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteMajorModalLabel"><i class="fas fa-trash"></i> Delete Major</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the major "<strong id="deleteMajorName"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteMajor()">
                    <i class="fas fa-trash"></i> Delete Major
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
// Create Major with AJAX
function createMajor() {
    const formData = new FormData(document.getElementById('createMajorForm'));
    
    fetch('/Admin/CreateMajorAjax', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showToast(data.message, 'success');
            
            // Clear form
            document.getElementById('createMajorForm').reset();
            
            // Reload page to show new major and update statistics
            setTimeout(() => location.reload(), 1000);
        } else {
            showToast(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('An error occurred while creating the major.', 'error');
    });
}

// Edit Major
function editMajor(majorId) {
    $.ajax({
        url: '@Url.Action("GetMajor", "Admin")',
        type: 'GET',
        data: { id: majorId },
        success: function(major) {
            document.getElementById('editMajorId').value = major.majorId;
            document.getElementById('editMajorName').value = major.name;
            
            // Set department dropdown
            $('#editDepartmentId').val(major.departmentId);
            const departmentOption = $('#editDepartmentDropdown .dropdown-option[data-id="' + major.departmentId + '"]');
            if (departmentOption.length > 0) {
                $('#editDepartment').val(departmentOption.attr('data-name'));
            }
            
            const modal = new bootstrap.Modal(document.getElementById('editMajorModal'));
            modal.show();
        },
        error: function() {
            showToast('Error loading major data.', 'danger');
        }
    });
}

// Update Major with AJAX
function updateMajor() {
    const formData = new FormData(document.getElementById('editMajorForm'));
    
    fetch('/Admin/UpdateMajorAjax', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showToast(data.message, 'success');
            
            // Update the table row
            const row = document.querySelector(`tr[data-major-id="${data.major.majorId}"]`);
            if (row) {
                row.cells[1].innerHTML = `<strong>${data.major.name}</strong>`;
                row.cells[2].innerHTML = `<span class="badge bg-secondary">${data.major.departmentName}</span>`;
            }
            
            const modal = bootstrap.Modal.getInstance(document.getElementById('editMajorModal'));
            modal.hide();
        } else {
            showToast(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('An error occurred while updating the major.', 'error');
    });
}

// Delete Major with AJAX
let deleteMajorId = null;
let deleteMajorName = null;

function deleteMajor(majorId, majorName) {
    deleteMajorId = majorId;
    deleteMajorName = majorName;
    document.getElementById('deleteMajorName').textContent = majorName;
    $('#deleteMajorModal').modal('show');
}

function confirmDeleteMajor() {
    if (!deleteMajorId) return;

    const formData = new FormData();
    formData.append('MajorId', deleteMajorId);
    
    fetch('/Admin/DeleteMajorAjax', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            $('#deleteMajorModal').modal('hide');
            showToast(data.message, 'success');
            
            // Remove the table row
            const row = document.querySelector(`tr[data-major-id="${deleteMajorId}"]`);
            if (row) {
                row.remove();
                
                // Check if table is empty
                const tbody = document.querySelector('tbody');
                if (tbody.children.length === 0) {
                    location.reload(); // Reload to show empty state
                }
            }
        } else {
            showToast(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('An error occurred while deleting the major.', 'error');
    });
}

// Update form to use AJAX
document.addEventListener('DOMContentLoaded', function() {
    const createForm = document.getElementById('createMajorForm');
    if (createForm) {
        createForm.addEventListener('submit', function(e) {
            e.preventDefault();
            createMajor();
        });
    }
});

// Search Majors Function
$('#majorSearchInput').on('keyup', function() {
    const searchValue = $(this).val().toLowerCase();
    
    $('#majorsTable tbody tr').each(function() {
        const row = $(this);
        // Skip the "no majors found" message row
        if (row.attr('id') === 'noResultsMessage') return;
        
        const text = row.text().toLowerCase();
        
        if (text.includes(searchValue)) {
            row.show();
        } else {
            row.hide();
        }
    });
    
    // Show message if no results
    const visibleRows = $('#majorsTable tbody tr:visible').not('#noResultsMessage').length;
    if (visibleRows === 0 && searchValue !== '') {
        if ($('#noResultsMessage').length === 0) {
            $('#majorsTable tbody').append(
                '<tr id="noResultsMessage"><td colspan="4" class="text-center text-muted py-4">' +
                '<i class="fas fa-search" style="font-size: 2rem;"></i>' +
                '<p class="mt-2">No majors found matching your search.</p>' +
                '</td></tr>'
            );
        }
    } else {
        $('#noResultsMessage').remove();
    }
});

// Searchable dropdown functionality
$('.searchable-dropdown-input').on('focus', function() {
    // Hide all dropdowns first
    $('.searchable-dropdown-menu').hide();
    // Show the corresponding dropdown
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId).show();
});

$('.searchable-dropdown-input').on('input', function() {
    var query = $(this).val().toLowerCase();
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId + ' .dropdown-option').each(function() {
        var text = $(this).text().toLowerCase();
        if (text.includes(query)) {
            $(this).show();
        } else {
            $(this).hide();
        }
    });
});

$('.dropdown-option').on('click', function(e) {
    e.preventDefault();
    var id = $(this).data('id');
    var name = $(this).data('name');
    var input = $(this).closest('.position-relative').find('.searchable-dropdown-input');
    var hidden = $(this).closest('.position-relative').find('input[type="hidden"]');
    input.val(name);
    hidden.val(id);
    $(this).closest('.dropdown-menu').hide();
});

// Hide dropdown when click outside
$(document).on('click', function(e) {
    if (!$(e.target).closest('.position-relative').length) {
        $('.searchable-dropdown-menu').hide();
    }
});
</script>
}