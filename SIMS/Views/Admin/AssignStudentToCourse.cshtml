@model List<SIMS.Models.StudentCourse>
@{
    ViewData["Title"] = "Assign Students to Courses";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-graduation-cap"></i> Students In Course List</h5>
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="assignmentSearchInput" class="form-control search-input" placeholder="Search assignments...">
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="assignmentsTable">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Student</th>
                                    <th>Course</th>
                                    <th>Subject</th>
                                    <th>Major</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int counter = 1; }
                                @foreach (var assignment in Model)
                                {
                                    // Define color palette for courses
                                    string[] courseColors = { "#e3f2fd", "#f3e5f5", "#e8f5e8", "#fff3e0", "#fce4ec", "#e0f2f1", "#f1f8e9", "#ede7f6" };
                                    int colorIndex = assignment.CourseId % courseColors.Length;
                                    string courseBgColor = courseColors[colorIndex];
                                    
                                    <tr class="clickable-row" onclick="editAssignment(@assignment.StudentId, @assignment.CourseId)" style="cursor: pointer;">
                                        <td>@counter</td>
                                        <td>
                                            <strong>@assignment.Student.User.Name</strong>
                                            <br><small class="text-muted">@assignment.Student.User.Email</small>
                                        </td>
                                        <td>
                                            <span class="badge" style="background-color: @courseBgColor; color: #333; padding: 4px 8px; border-radius: 4px; font-weight: 500;">
                                                @assignment.Course.CourseName
                                            </span>
                                        </td>
                                        <td>
                                            @assignment.Course.Subject.Name
                                            <br><small class="text-muted">@assignment.Course.Subject.Code</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@assignment.Student.Major.Name</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-link text-primary p-0 me-2" onclick="event.stopPropagation(); editAssignment(@assignment.StudentId, @assignment.CourseId)" title="Edit Assignment">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-link text-danger p-0" 
                                                    onclick="event.stopPropagation(); removeStudent(@assignment.StudentId, @assignment.CourseId, '@assignment.Student.User.Name', '@assignment.Course.CourseName')" 
                                                    title="Remove Assignment">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("_Pagination")
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-user-graduate text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No student-course assignments found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plus"></i> Assign Student to Course</h5>
            </div>
            <div class="card-body">
                <form id="assignForm" method="post">
                    @{
                        ViewBag.Id = "studentSearch";
                        ViewBag.Name = "studentId";
                        ViewBag.Placeholder = "Search and select student...";
                        ViewBag.Label = "Select Student";
                        ViewBag.Icon = "fas fa-user-graduate";
                        ViewBag.Items = (ViewBag.Students as List<SIMS.Models.Student>)?.Select(s => new { Id = s.StudentId, Name = s.User.Name + " (" + s.Major.Name + ")" });
                    }
                    @Html.Partial("_SearchableDropdown")
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-book"></i> Select Course
                        </label>
                        @{
                            ViewBag.Id = "courseSearch";
                            ViewBag.Name = "courseId";
                            ViewBag.Placeholder = "Search and select course...";
                            ViewBag.Label = "";
                            ViewBag.Icon = "";
                            ViewBag.Items = (ViewBag.Courses as List<SIMS.Models.Course>)?.Select(c => new { Id = c.CourseId, Name = c.CourseName });
                        }
                        @Html.Partial("_SearchableDropdown")
                    </div>
                    
                    <button type="button" class="btn btn-primary w-100" onclick="assignStudent()">
                        <i class="fas fa-user-plus"></i> Assign to Course
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-chart-bar"></i> Assignment Statistics</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <h4 class="text-primary">@Model.Count()</h4>
                    <p class="text-muted mb-0">Total Assignments</p>
                </div>
                <hr>
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i> 
                    Students: @Model.Select(m => m.StudentId).Distinct().Count() | 
                    Courses: @Model.Select(m => m.CourseId).Distinct().Count()
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Remove Student Modal -->
<div class="modal fade" id="removeStudentModal" tabindex="-1" aria-labelledby="removeStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeStudentModalLabel"><i class="fas fa-user-minus"></i> Remove Student from Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove <strong id="removeStudentName"></strong> from the course <strong id="removeCourseName"></strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmRemoveStudent()">
                    <i class="fas fa-user-minus"></i> Remove Student
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Assignment Modal -->
<div class="modal fade" id="editAssignmentModal" tabindex="-1" aria-labelledby="editAssignmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAssignmentModalLabel"><i class="fas fa-edit"></i> Edit Student Assignment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editAssignmentForm">
                    <input type="hidden" id="originalStudentId" />
                    <input type="hidden" id="originalCourseId" />
                    
                    <div class="form-group mb-3">
                        <label class="form-label">
                            <i class="fas fa-user-graduate"></i> Student
                        </label>
                        @{
                            ViewBag.Id = "editStudentSearch";
                            ViewBag.Name = "editStudentId";
                            ViewBag.Placeholder = "Search and select student...";
                            ViewBag.Label = "";
                            ViewBag.Icon = "";
                            ViewBag.Items = (ViewBag.Students as List<SIMS.Models.Student>)?.Select(s => new { Id = s.StudentId, Name = s.User.Name + " (" + s.Major.Name + ")" });
                        }
                        @Html.Partial("_SearchableDropdown")
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">
                            <i class="fas fa-book"></i> Course
                        </label>
                        @{
                            ViewBag.Id = "editCourseSearch";
                            ViewBag.Name = "editCourseId";
                            ViewBag.Placeholder = "Search and select course...";
                            ViewBag.Label = "";
                            ViewBag.Icon = "";
                            ViewBag.Items = (ViewBag.Courses as List<SIMS.Models.Course>)?.Select(c => new { Id = c.CourseId, Name = c.CourseName });
                        }
                        @Html.Partial("_SearchableDropdown")
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateAssignment()">
                    <i class="fas fa-save"></i> Update Assignment
                </button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="removeStudentId" />
<input type="hidden" id="removeCourseId" />

@section Scripts {
    <script>
        // Toast notifications
        function showToast(message, type = 'info') {
            var toastHtml = `
                <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            // Create toast container if it doesn't exist
            if (!$('#toast-container').length) {
                $('body').append('<div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>');
            }
            
            var $toast = $(toastHtml);
            $('#toast-container').append($toast);
            
            var toast = new bootstrap.Toast($toast[0]);
            toast.show();
            
            // Remove from DOM after hide
            $toast.on('hidden.bs.toast', function() {
                $(this).remove();
            });
        }

        function removeStudent(studentId, courseId, studentName, courseName) {
            document.getElementById('removeStudentId').value = studentId;
            document.getElementById('removeCourseId').value = courseId;
            document.getElementById('removeStudentName').textContent = studentName;
            document.getElementById('removeCourseName').textContent = courseName;
            new bootstrap.Modal(document.getElementById('removeStudentModal')).show();
        }

        function confirmRemoveStudent() {
            const studentId = document.getElementById('removeStudentId').value;
            const courseId = document.getElementById('removeCourseId').value;
            if (!studentId || !courseId) return;

            const formData = new FormData();
            formData.append('studentId', studentId);
            formData.append('courseId', courseId);

            fetch('@Url.Action("RemoveStudentFromCourse", "Admin")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    $('#removeStudentModal').modal('hide');
                    showToast(data.message, 'success');
                    setTimeout(() => location.reload(), 1000); // Delay reload to show toast
                } else {
                    showToast(data.message, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while removing the student.', 'error');
            });
        }

        function assignStudent() {
            const form = document.getElementById('assignForm');
            const formData = new FormData(form);

            fetch('@Url.Action("AssignStudentToCoursePost", "Admin")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast(data.message, 'success');
                    form.reset(); // Clear the form
                    setTimeout(() => location.reload(), 1000); // Delay reload to show toast
                } else {
                    showToast(data.message, 'warning');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while assigning the student.', 'error');
            });
        }

        function editAssignment(studentId, courseId) {
            console.log('Editing assignment:', studentId, courseId);
            fetch('@Url.Action("GetStudentCourse", "Admin")?studentId=' + studentId + '&courseId=' + courseId)
            .then(response => {
                console.log('Response status:', response.status);
                return response.json();
            })
            .then(data => {
                console.log('Response data:', data);
                if (data.success) {
                    // Populate the edit modal
                    document.getElementById('originalStudentId').value = data.studentId;
                    document.getElementById('originalCourseId').value = data.courseId;
                    
                    // Set the dropdown values
                    document.getElementById('editStudentSearch').value = data.studentName;
                    document.getElementById('editStudentSearchId').value = data.studentId;
                    document.getElementById('editCourseSearch').value = data.courseName;
                    document.getElementById('editCourseSearchId').value = data.courseId;
                    
                    // Show the modal
                    new bootstrap.Modal(document.getElementById('editAssignmentModal')).show();
                } else {
                    showToast('Failed to load assignment data.', 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while loading assignment data.', 'error');
            });
        }

        function updateAssignment() {
            const currentStudentId = document.getElementById('originalStudentId').value;
            const currentCourseId = document.getElementById('originalCourseId').value;
            const newStudentId = document.getElementById('editStudentSearchId').value;
            const newCourseId = document.getElementById('editCourseSearchId').value;

            if (!currentStudentId || !currentCourseId || !newStudentId || !newCourseId) {
                showToast('Please select both student and course.', 'warning');
                return;
            }

            const formData = new FormData();
            formData.append('currentStudentId', currentStudentId);
            formData.append('currentCourseId', currentCourseId);
            formData.append('newStudentId', newStudentId);
            formData.append('newCourseId', newCourseId);

            fetch('@Url.Action("UpdateStudentCourseAssignment", "Admin")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    $('#editAssignmentModal').modal('hide');
                    showToast(data.message, 'success');
                    setTimeout(() => location.reload(), 1000); // Delay reload to show toast
                } else {
                    showToast(data.message, 'warning');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while updating the assignment.', 'error');
            });
        }

// Search Assignments Function
$('#assignmentSearchInput').on('keyup', function() {
    const searchValue = $(this).val().toLowerCase();
    
    $('#assignmentsTable tbody tr').each(function() {
        const row = $(this);
        // Skip the "no assignments found" message row
        if (row.attr('id') === 'noResultsMessage') return;
        
        const text = row.text().toLowerCase();
        
        if (text.includes(searchValue)) {
            row.show();
        } else {
            row.hide();
        }
    });
    
    // Show message if no results
    const visibleRows = $('#assignmentsTable tbody tr:visible').not('#noResultsMessage').length;
    if (visibleRows === 0 && searchValue !== '') {
        if ($('#noResultsMessage').length === 0) {
            $('#assignmentsTable tbody').append(
                '<tr id="noResultsMessage"><td colspan="6" class="text-center text-muted py-4">' +
                '<i class="fas fa-search" style="font-size: 2rem;"></i>' +
                '<p class="mt-2">No assignments found matching your search.</p>' +
                '</td></tr>'
            );
        }
    } else {
        $('#noResultsMessage').remove();
    }
});

$('.select2').select2({
    placeholder: "Search for a student...",
    allowClear: true,
    minimumResultsForSearch: 0
});

// Searchable dropdown
$('.searchable-dropdown-input').on('focus', function() {
    // Hide all dropdowns first
    $('.searchable-dropdown-menu').hide();
    // Show the corresponding dropdown
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId).show();
});

$('.searchable-dropdown-input').on('input', function() {
    var query = $(this).val().toLowerCase();
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId + ' .dropdown-option').each(function() {
        var text = $(this).text().toLowerCase();
        if (text.includes(query)) {
            $(this).show();
        } else {
            $(this).hide();
        }
    });
});

$('.dropdown-option').on('click', function(e) {
    e.preventDefault();
    var id = $(this).data('id');
    var name = $(this).data('name');
    var input = $(this).closest('.position-relative').find('.searchable-dropdown-input');
    var hidden = $(this).closest('.position-relative').find('input[type="hidden"]');
    input.val(name);
    hidden.val(id);
    $(this).closest('.dropdown-menu').hide();
});

// Hide dropdown when click outside
$(document).on('click', function(e) {
    if (!$(e.target).closest('.position-relative').length) {
        $('.searchable-dropdown-menu').hide();
    }
});
    </script>
}