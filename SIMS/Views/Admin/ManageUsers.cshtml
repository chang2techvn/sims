@model List<SIMS.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<!-- Statistics cards removed as requested -->

<!-- Users Table Card -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users"></i> System Users</h5>
        <div class="d-flex gap-2 align-items-center">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="userSearchInput" class="form-control search-input" placeholder="Search users...">
            </div>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importUserModal">
                <i class="fas fa-upload text-white"></i> Import Users
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                <i class="fas fa-plus"></i> Add User
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Avatar</th>
                            <th>Student Code</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 1; }
                        @foreach (var user in Model)
                        {
                            <tr style="cursor: pointer;" onclick="editUser('@user.Id')">
                                <td>@counter</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.Avatar))
                                    {
                                        <img src="@user.Avatar" alt="Avatar" class="rounded-circle" width="40" height="40">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle" style="font-size: 2.5rem; color: var(--primary-orange);"></i>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.StudentCode))
                                    {
                                        <span class="badge bg-info">@user.StudentCode</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><strong>@user.Name</strong></td>
                                <td>@user.Email</td>
                                <td>
                                    @{
                                        var badgeClass = user.Role?.ToLower() switch
                                        {
                                            "admin" => "bg-warning",
                                            "lecturer" => "bg-success",
                                            "student" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass text-capitalize">@user.Role</span>
                                </td>
                                <td>@(user.Phone ?? "N/A")</td>
                                <td>
                                    @if (user.DateOfBirth.HasValue)
                                    {
                                        @user.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@(user.Gender ?? "N/A")</td>
                                <td onclick="event.stopPropagation()">
                                    <button class="btn btn-link text-primary p-0 me-2" onclick="editUser('@user.Id')" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-link text-danger p-0" onclick="deleteUser('@user.Id', '@user.Name')" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
            @Html.Partial("_Pagination")
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No users found in the system.</p>
            </div>
        }
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-plus"></i> Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addUserForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Full Name *</label>
                                <input type="text" class="form-control" name="Name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" name="Email" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Password *</label>
                                <input type="password" class="form-control" name="Password" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Role *</label>
                                @{
                                    ViewBag.Id = "addRole";
                                    ViewBag.Name = "Role";
                                    ViewBag.Placeholder = "Search and select role...";
                                    ViewBag.Label = "";
                                    ViewBag.Icon = "";
                                    ViewBag.Items = new List<dynamic> {
                                        new { Id = "Admin", Name = "Admin" },
                                        new { Id = "Lecturer", Name = "Lecturer" },
                                        new { Id = "Student", Name = "Student" }
                                    };
                                }
                                @Html.Partial("_SearchableDropdown")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Student Code</label>
                                <input type="text" class="form-control" name="StudentCode" placeholder="BC00132" maxlength="10" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="DateOfBirth" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control" name="Phone" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Gender</label>
                                @{
                                    ViewBag.Id = "addGender";
                                    ViewBag.Name = "Gender";
                                    ViewBag.Placeholder = "Search and select gender...";
                                    ViewBag.Label = "";
                                    ViewBag.Icon = "";
                                    ViewBag.Items = new List<dynamic> {
                                        new { Id = "Male", Name = "Male" },
                                        new { Id = "Female", Name = "Female" },
                                        new { Id = "Other", Name = "Other" }
                                    };
                                }
                                @Html.Partial("_SearchableDropdown")
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" name="Address" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Add User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
