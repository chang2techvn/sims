@model List<SIMS.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<!-- Statistics cards removed as requested -->

<!-- Users Table Card -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users"></i> System Users</h5>
        <div class="d-flex gap-2 align-items-center">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="userSearchInput" class="form-control search-input" placeholder="Search users...">
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                <i class="fas fa-plus"></i> Add User
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Avatar</th>
                            <th>Student Code</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 1; }
                        @foreach (var user in Model)
                        {
                            <tr style="cursor: pointer;" onclick="editUser('@user.Id')">
                                <td>@counter</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.Avatar))
                                    {
                                        <img src="@user.Avatar" alt="Avatar" class="rounded-circle" width="40" height="40">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle" style="font-size: 2.5rem; color: var(--primary-orange);"></i>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.StudentCode))
                                    {
                                        <span class="badge bg-info">@user.StudentCode</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><strong>@user.Name</strong></td>
                                <td>@user.Email</td>
                                <td>
                                    @{
                                        var badgeClass = user.Role?.ToLower() switch
                                        {
                                            "admin" => "bg-warning",
                                            "lecturer" => "bg-success",
                                            "student" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass text-capitalize">@user.Role</span>
                                </td>
                                <td>@(user.Phone ?? "N/A")</td>
                                <td>
                                    @if (user.DateOfBirth.HasValue)
                                    {
                                        @user.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@(user.Gender ?? "N/A")</td>
                                <td onclick="event.stopPropagation()">
                                    <button class="btn btn-link text-primary p-0 me-2" onclick="editUser('@user.Id')" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-link text-danger p-0" onclick="deleteUser('@user.Id', '@user.Name')" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No users found in the system.</p>
            </div>
        }
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-plus"></i> Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addUserForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Full Name *</label>
                                <input type="text" class="form-control" name="Name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" name="Email" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Password *</label>
                                <input type="password" class="form-control" name="Password" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Role *</label>
                                <select class="form-select" name="Role" required>
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Lecturer">Lecturer</option>
                                    <option value="Student">Student</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Student Code</label>
                                <input type="text" class="form-control" name="StudentCode" placeholder="BC00132" maxlength="10" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="DateOfBirth" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control" name="Phone" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Gender</label>
                                <select class="form-select" name="Gender">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" name="Address" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Add User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-edit"></i> Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editUserForm">
                <input type="hidden" id="editUserId" name="Id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Full Name *</label>
                                <input type="text" class="form-control" id="editName" name="Name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" id="editEmail" name="Email" required readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Role *</label>
                                <select class="form-select" id="editRole" name="Role" required>
                                    <option value="Admin">Admin</option>
                                    <option value="Lecturer">Lecturer</option>
                                    <option value="Student">Student</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Student Code</label>
                                <input type="text" class="form-control" id="editStudentCode" name="StudentCode" placeholder="BC00132" maxlength="10" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editDateOfBirth" name="DateOfBirth" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="editPhone" name="Phone" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Gender</label>
                                <select class="form-select" id="editGender" name="Gender">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Address</label>
                                <textarea class="form-control" id="editAddress" name="Address" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel"><i class="fas fa-trash"></i> Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the user "<strong id="deleteUserName"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteUser()">
                    <i class="fas fa-trash"></i> Delete User
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Add User Form Submit
    $('#addUserForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        $.ajax({
            url: '@Url.Action("AddUser", "Admin")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    $('#addUserModal').modal('hide');
                    showToast('User added successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error adding user. Please try again.', 'danger');
            }
        });
    });

    // Edit User Function
    function editUser(userId) {
        $.ajax({
            url: '@Url.Action("GetUser", "Admin")',
            type: 'GET',
            data: { id: userId },
            success: function(user) {
                $('#editUserId').val(user.id);
                $('#editName').val(user.name);
                $('#editEmail').val(user.email);
                $('#editRole').val(user.role);
                $('#editStudentCode').val(user.studentCode);
                $('#editPhone').val(user.phone);
                $('#editGender').val(user.gender);
                $('#editAddress').val(user.address);
                
                if (user.dateOfBirth) {
                    const date = new Date(user.dateOfBirth);
                    $('#editDateOfBirth').val(date.toISOString().split('T')[0]);
                }
                
                $('#editUserModal').modal('show');
            },
            error: function() {
                showToast('Error loading user data.', 'danger');
            }
        });
    }

    // Edit User Form Submit
    $('#editUserForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        $.ajax({
            url: '@Url.Action("UpdateUser", "Admin")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    $('#editUserModal').modal('hide');
                    showToast('User updated successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error updating user. Please try again.', 'danger');
            }
        });
    });

    // Delete User Function
    let deleteUserId = null;
    let deleteUserName = null;

    function deleteUser(userId, userName) {
        deleteUserId = userId;
        deleteUserName = userName;
        document.getElementById('deleteUserName').textContent = userName;
        $('#deleteUserModal').modal('show');
    }

    function confirmDeleteUser() {
        if (!deleteUserId) return;

        $.ajax({
            url: '@Url.Action("DeleteUser", "Admin")',
            type: 'POST',
            data: { id: deleteUserId },
            success: function(response) {
                if (response.success) {
                    $('#deleteUserModal').modal('hide');
                    showToast('User deleted successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error deleting user. Please try again.', 'danger');
            }
        });
    }

    // Search Users Function
    $('#userSearchInput').on('keyup', function() {
        const searchValue = $(this).val().toLowerCase();
        
        $('table tbody tr').each(function() {
            const row = $(this);
            const text = row.text().toLowerCase();
            
            if (text.includes(searchValue)) {
                row.show();
            } else {
                row.hide();
            }
        });
        
        // Show message if no results
        const visibleRows = $('table tbody tr:visible').length;
        if (visibleRows === 0 && searchValue !== '') {
            if ($('#noResultsMessage').length === 0) {
                $('table tbody').append(
                    '<tr id="noResultsMessage"><td colspan="10" class="text-center text-muted py-4">' +
                    '<i class="fas fa-search" style="font-size: 2rem;"></i>' +
                    '<p class="mt-2">No users found matching your search.</p>' +
                    '</td></tr>'
                );
            }
        } else {
            $('#noResultsMessage').remove();
        }
    });
</script>
}