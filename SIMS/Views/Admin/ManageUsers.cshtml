    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-edit"></i> Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editUserForm">
                <input type="hidden" id="editUserId" name="Id" />
                <div class="modal-body">
                    <!-- Avatar Section -->
                    <div class="text-center mb-4">
                        <div class="user-avatar mb-3 position-relative d-inline-block">
                            <img id="editAvatarPreview" src="" alt="Avatar" class="rounded-circle avatar-image" width="120" height="120" style="display: none;">
                            <i class="fas fa-user-circle avatar-placeholder" style="font-size: 120px; color: var(--primary-orange);" id="editAvatarPlaceholder"></i>
                            <div class="avatar-overlay">
                                <label for="editAvatarUpload" class="avatar-upload-btn">
                                    <i class="fas fa-camera"></i>
                                </label>
                                <input type="file" id="editAvatarUpload" name="avatar" accept="image/*" class="d-none">
                            </div>
                        </div>
                        <p class="text-muted small">Click to change avatar</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Full Name *</label>
                                <input type="text" class="form-control" id="editName" name="Name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" id="editPassword" name="Password" placeholder="Leave blank to keep current password" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Role *</label>
                                @{
                                    ViewBag.Id = "editRole";
                                    ViewBag.Name = "Role";
                                    ViewBag.Placeholder = "Search and select role...";
                                    ViewBag.Label = "";
                                    ViewBag.Icon = "";
                                    ViewBag.Items = new List<dynamic> {
                                        new { Id = "Admin", Name = "Admin" },
                                        new { Id = "Lecturer", Name = "Lecturer" },
                                        new { Id = "Student", Name = "Student" }
                                    };
                                }
                                @Html.Partial("_SearchableDropdown")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Student Code</label>
                                <input type="text" class="form-control" id="editStudentCode" name="StudentCode" placeholder="BC00132" maxlength="10" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editDateOfBirth" name="DateOfBirth" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="editPhone" name="Phone" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Gender</label>
                                @{
                                    ViewBag.Id = "editGender";
                                    ViewBag.Name = "Gender";
                                    ViewBag.Placeholder = "Search and select gender...";
                                    ViewBag.Label = "";
                                    ViewBag.Icon = "";
                                    ViewBag.Items = new List<dynamic> {
                                        new { Id = "Male", Name = "Male" },
                                        new { Id = "Female", Name = "Female" },
                                        new { Id = "Other", Name = "Other" }
                                    };
                                }
                                @Html.Partial("_SearchableDropdown")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Address</label>
                                <textarea class="form-control" id="editAddress" name="Address" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel"><i class="fas fa-trash"></i> Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the user "<strong id="deleteUserName"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteUser()">
                    <i class="fas fa-trash"></i> Delete User
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Import Users Modal -->
<div class="modal fade" id="importUserModal" tabindex="-1" aria-labelledby="importUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importUserModalLabel"><i class="fas fa-upload"></i> Import Users</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importUserForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Import Instructions:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Upload a CSV or Excel file (.csv, .xlsx, .xls)</li>
                            <li>Required columns: Name, Email, Password, Role</li>
                            <li>Optional columns: StudentCode, DateOfBirth, Phone, Gender, Address</li>
                            <li>DateOfBirth format: YYYY-MM-DD</li>
                            <li>Role values: Admin, Lecturer, Student</li>
                        </ul>
                    </div>
                    <div class="mb-3">
                        <label for="importFile" class="form-label">Select File *</label>
                        <input type="file" class="form-control" id="importFile" name="file" accept=".csv,.xlsx,.xls" required />
                        <div class="form-text">Supported formats: CSV, Excel (.xlsx, .xls)</div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="skipDuplicates" name="skipDuplicates" checked>
                            <label class="form-check-label" for="skipDuplicates">
                                Skip duplicate emails (recommended)
                            </label>
                        </div>
                    </div>
                    <div id="importPreview" class="mt-3" style="display: none;">
                        <h6>Preview (First 5 rows):</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered" id="previewTable"></table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="importBtn">
                        <i class="fas fa-upload"></i> Import Users
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Add User Form Submit
    $('#addUserForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        $.ajax({
            url: '@Url.Action("AddUser", "Admin")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    $('#addUserModal').modal('hide');
                    showToast('User added successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error adding user. Please try again.', 'danger');
            }
        });
    });

    // Import Users Form Submit
    $('#importUserForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const file = formData.get('file');
        
        if (!file || file.size === 0) {
            showToast('Please select a file to import.', 'warning');
            return;
        }
        
        // Show loading state
        $('#importBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Importing...');
        
        $.ajax({
            url: '@Url.Action("ImportUsers", "Admin")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                if (response.success) {
                    $('#importUserModal').modal('hide');
                    showToast(`Successfully imported ${response.importedCount} users!`, 'success');
                    if (response.errors && response.errors.length > 0) {
                        showToast(`Warning: ${response.errors.length} rows had errors.`, 'warning');
                    }
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function(xhr) {
                let errorMessage = 'Error importing users. Please try again.';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMessage = xhr.responseJSON.message;
                }
                showToast(errorMessage, 'danger');
            },
            complete: function() {
                $('#importBtn').prop('disabled', false).html('<i class="fas fa-upload"></i> Import Users');
            }
        });
    });

    // File preview functionality
    $('#importFile').on('change', function() {
        const file = this.files[0];
        if (file) {
            const fileName = file.name.toLowerCase();
            if (!fileName.endsWith('.csv') && !fileName.endsWith('.xlsx') && !fileName.endsWith('.xls')) {
                showToast('Please select a valid CSV or Excel file.', 'warning');
                this.value = '';
                return;
            }
            
            // Basic file size check (10MB limit)
            if (file.size > 10 * 1024 * 1024) {
                showToast('File size must be less than 10MB.', 'warning');
                this.value = '';
                return;
            }
        }
    });

    // Edit User Function
    function editUser(userId) {
        $.ajax({
            url: '@Url.Action("GetUser", "Admin")',
            type: 'GET',
            data: { id: userId },
            success: function(user) {
                $('#editUserId').val(user.id);
                $('#editName').val(user.name);
                $('#editEmail').val(user.email);
                
                // Handle avatar - load from database
                if (user.avatar) {
                    $('#editAvatarPreview').attr('src', user.avatar).show();
                    $('#editAvatarPlaceholder').hide();
                } else {
                    $('#editAvatarPreview').hide();
                    $('#editAvatarPlaceholder').show();
                }
                
                // Clear password field (can't load hashed password)
                $('#editPassword').val('');
                
                // Set role dropdown
                $('#editRoleId').val(user.role);
                $('#editRole').val(user.role);
                
                $('#editStudentCode').val(user.studentCode);
                $('#editPhone').val(user.phone);
                
                // Set gender dropdown
                $('#editGenderId').val(user.gender);
                $('#editGender').val(user.gender);
                
                $('#editAddress').val(user.address);
                
                if (user.dateOfBirth) {
                    const date = new Date(user.dateOfBirth);
                    $('#editDateOfBirth').val(date.toISOString().split('T')[0]);
                }
                
                $('#editUserModal').modal('show');
            },
            error: function() {
                showToast('Error loading user data.', 'danger');
            }
        });
    }

    // Edit User Form Submit
    $('#editUserForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        console.log('Form data:', data);
        
        // Handle avatar upload first if there's a file
        const avatarFile = $('#editAvatarUpload')[0].files[0];
        if (avatarFile) {
            const avatarFormData = new FormData();
            avatarFormData.append('avatar', avatarFile);
            avatarFormData.append('userId', data.Id); // Add user ID for admin upload
            console.log('Uploading avatar for userId:', data.Id);
            
            $.ajax({
                url: '@Url.Action("UploadAvatar", "Account")',
                type: 'POST',
                data: avatarFormData,
                processData: false,
                contentType: false,
                success: function(avatarResponse) {
                    console.log('Avatar upload response:', avatarResponse);
                    if (avatarResponse.success) {
                        // Update avatar URL in data
                        data.Avatar = avatarResponse.avatarUrl;
                        // Create FormData for user update (excluding file)
                        const userUpdateData = new FormData();
                        Object.keys(data).forEach(key => {
                            if (key !== 'avatar') { // Exclude the file field
                                userUpdateData.append(key, data[key]);
                            }
                        });
                        // Now submit the user update
                        submitUserUpdate(userUpdateData);
                    } else {
                        showToast('Error uploading avatar: ' + avatarResponse.message, 'danger');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Avatar upload error:', xhr.responseText, status, error);
                    showToast('Error uploading avatar. Please try again.', 'danger');
                }
            });
        } else {
            // No avatar upload, create FormData without file
            const userUpdateData = new FormData();
            Object.keys(data).forEach(key => {
                userUpdateData.append(key, data[key]);
            });
            submitUserUpdate(userUpdateData);
        }
    });

    function submitUserUpdate(data) {
        $.ajax({
            url: '@Url.Action("UpdateUser", "Admin")',
            type: 'POST',
            data: data,
            processData: false,  // Don't process the data
            contentType: false,  // Don't set contentType
            success: function(response) {
                if (response.success) {
                    $('#editUserModal').modal('hide');
                    showToast('User updated successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error updating user. Please try again.', 'danger');
            }
        });
    }

    // Delete User Function
    let deleteUserId = null;
    let deleteUserName = null;

    function deleteUser(userId, userName) {
        deleteUserId = userId;
        deleteUserName = userName;
        document.getElementById('deleteUserName').textContent = userName;
        $('#deleteUserModal').modal('show');
    }

    function confirmDeleteUser() {
        if (!deleteUserId) return;

        $.ajax({
            url: '@Url.Action("DeleteUser", "Admin")',
            type: 'POST',
            data: { id: deleteUserId },
            success: function(response) {
                if (response.success) {
                    $('#deleteUserModal').modal('hide');
                    showToast('User deleted successfully!', 'success');
                    location.reload();
                } else {
                    showToast('Error: ' + response.message, 'danger');
                }
            },
            error: function() {
                showToast('Error deleting user. Please try again.', 'danger');
            }
        });
    }

    // Search Users Function
    $('#userSearchInput').on('keyup', function() {
        const searchValue = $(this).val().toLowerCase();
        
        $('table tbody tr').each(function() {
            const row = $(this);
            const text = row.text().toLowerCase();
            
            if (text.includes(searchValue)) {
                row.show();
            } else {
                row.hide();
            }
        });
        
        // Show message if no results
        const visibleRows = $('table tbody tr:visible').length;
        if (visibleRows === 0 && searchValue !== '') {
            if ($('#noResultsMessage').length === 0) {
                $('table tbody').append(
                    '<tr id="noResultsMessage"><td colspan="10" class="text-center text-muted py-4">' +
                    '<i class="fas fa-search" style="font-size: 2rem;"></i>' +
                    '<p class="mt-2">No users found matching your search.</p>' +
                    '</td></tr>'
                );
            }
        } else {
            $('#noResultsMessage').remove();
        }
    });

// Edit Avatar Upload Preview
$('#editAvatarUpload').on('change', function(e) {
    const file = e.target.files[0];
    if (file) {
        // Validate file type
        if (!file.type.startsWith('image/')) {
            showToast('Please select a valid image file.', 'danger');
            return;
        }
        
        // Validate file size (max 5MB)
        if (file.size > 5 * 1024 * 1024) {
            showToast('Image size must be less than 5MB.', 'danger');
            return;
        }
        
        const reader = new FileReader();
        reader.onload = function(e) {
            const imageUrl = e.target.result;
            
            // Hide placeholder and show image
            $('#editAvatarPlaceholder').hide();
            $('#editAvatarPreview').attr('src', imageUrl).show();
        };
        reader.readAsDataURL(file);
    }
});

// Reset edit modal when closed
$('#editUserModal').on('hidden.bs.modal', function() {
    $('#editAvatarUpload').val(''); // Reset file input
    $('#editPassword').val(''); // Reset password field
});
$('.searchable-dropdown-input').on('focus', function() {
    // Hide all dropdowns first
    $('.searchable-dropdown-menu').hide();
    // Show the corresponding dropdown
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId).show();
});

$('.searchable-dropdown-input').on('input', function() {
    var query = $(this).val().toLowerCase();
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId + ' .dropdown-option').each(function() {
        var text = $(this).text().toLowerCase();
        if (text.includes(query)) {
            $(this).show();
        } else {
            $(this).hide();
        }
    });
});

$('.dropdown-option').on('click', function(e) {
    e.preventDefault();
    var id = $(this).data('id');
    var name = $(this).data('name');
    var input = $(this).closest('.position-relative').find('.searchable-dropdown-input');
    var hidden = $(this).closest('.position-relative').find('input[type="hidden"]');
    input.val(name);
    hidden.val(id);
    $(this).closest('.dropdown-menu').hide();
});

// Hide dropdown when click outside
$(document).on('click', function(e) {
    if (!$(e.target).closest('.position-relative').length) {
        $('.searchable-dropdown-menu').hide();
    }
});
</script>
