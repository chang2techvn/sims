@model List<SIMS.Models.Semester>
@{
    ViewData["Title"] = "Manage Semesters";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-graduation-cap"></i>Semesters List</h5>
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="semesterSearchInput" class="form-control search-input" placeholder="Search semesters...">
                    </div>
                </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="semestersTable">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Semester Name</th>
                                    <th>Year</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int counter = 1; }
                                @foreach (var semester in Model.OrderByDescending(s => s.Year).ThenBy(s => s.Name))
                                {
                                    <tr data-semester-id="@semester.SemesterId">
                                        <td>@counter</td>
                                        <td>
                                            <strong>@semester.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@semester.Year</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-link text-primary p-0 me-2" title="Edit" onclick="editSemester(@semester.SemesterId, '@semester.Name', '@semester.Year')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-link text-danger p-0" title="Delete" onclick="deleteSemester(@semester.SemesterId, '@semester.Name @semester.Year')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("_Pagination")
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-alt text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No semesters found. Create your first semester!</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plus"></i> Add New Semester</h5>
            </div>
            <div class="card-body">
                <form id="createSemesterForm" method="post">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-calendar"></i> Semester Name
                        </label>
                        <div class="position-relative">
                            <input type="text" id="createSemester" class="form-control searchable-dropdown-input" placeholder="Search and select semester..." autocomplete="off" required style="padding-right: 40px;">
                            <span class="position-absolute dropdown-arrow" style="right: 10px; top: 50%; transform: translateY(-50%); pointer-events: none; color: #6c757d;">
                                <i class="fas fa-chevron-down"></i>
                            </span>
                            <input type="hidden" name="name" id="createSemesterId" required>
                            <div id="createSemesterDropdown" class="dropdown-menu searchable-dropdown-menu" style="position: absolute; top: 100%; left: 0; width: 100%; max-height: 200px; overflow-y: auto; z-index: 1000;">
                                <a class="dropdown-item dropdown-option" href="#" data-id="Spring" data-name="Spring">Spring</a>
                                <a class="dropdown-item dropdown-option" href="#" data-id="Summer" data-name="Summer">Summer</a>
                                <a class="dropdown-item dropdown-option" href="#" data-id="Fall" data-name="Fall">Fall</a>
                                <a class="dropdown-item dropdown-option" href="#" data-id="Winter" data-name="Winter">Winter</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt"></i> Year
                        </label>
                        <input name="year" id="createSemesterYear" type="number" class="form-control" placeholder="e.g., 2024" 
                               min="2020" max="2030" value="@DateTime.Now.Year" required />
                    </div>
                    
                    <button type="button" class="btn btn-primary w-100" id="createSemesterBtn">
                        <i class="fas fa-plus"></i> Add Semester
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-chart-line"></i> Semesters by Year</h6>
            </div>
            <div class="card-body">
                @foreach (var yearGroup in Model.GroupBy(s => s.Year).OrderByDescending(g => g.Key))
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <small>Year @yearGroup.Key</small>
                            <small class="badge bg-primary">@yearGroup.Count()</small>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" style="width: @(yearGroup.Count() * 25)%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Semester Modal -->
<div class="modal fade" id="editSemesterModal" tabindex="-1" aria-labelledby="editSemesterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSemesterModalLabel"><i class="fas fa-edit"></i> Edit Semester</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editSemesterId" />
                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-calendar-alt"></i> Semester Name
                    </label>
                    <input id="editSemesterName" class="form-control" placeholder="Enter semester name" required />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">
                        <i class="fas fa-calendar"></i> Year
                    </label>
                    <input id="editSemesterYear" class="form-control" placeholder="Enter year" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="editSemesterAjax()">Update Semester</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Semester Modal -->
<div class="modal fade" id="deleteSemesterModal" tabindex="-1" aria-labelledby="deleteSemesterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteSemesterModalLabel"><i class="fas fa-trash"></i> Delete Semester</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the semester "<strong id="deleteSemesterName"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteSemester()">Delete Semester</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log('ManageSemesters script loaded');
        
        // Test if createSemester function exists
        window.testCreateSemester = function() {
            console.log('testCreateSemester called');
            if (typeof createSemester === 'function') {
                console.log('createSemester function exists');
            } else {
                console.log('createSemester function does not exist');
            }
        };
        
        console.log('About to define showToast function');
        
        // Toast notifications
        function showToast(message, type = 'info') {
            console.log('showToast function called with:', message, type);
            var toastHtml = `
                <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            // Create toast container if it doesn't exist
            if (!$('#toast-container').length) {
                $('body').append('<div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>');
            }
            
            var $toast = $(toastHtml);
            $('#toast-container').append($toast);
            
            var toast = new bootstrap.Toast($toast[0]);
            toast.show();
            
            // Remove from DOM after hide
            $toast.on('hidden.bs.toast', function() {
                $(this).remove();
            });
        }

        console.log('About to define semester management variables');
        
        // Delete Semester
        let deleteSemesterId = null;
        let deleteSemesterName = null;

        console.log('About to define editSemester function');
        
        function editSemester(id, name, year) {
            console.log('editSemester called with:', id, name, year);
            document.getElementById('editSemesterId').value = id;
            document.getElementById('editSemesterName').value = name;
            document.getElementById('editSemesterYear').value = year;
            new bootstrap.Modal(document.getElementById('editSemesterModal')).show();
        }

        console.log('About to define deleteSemester function');
        
        function deleteSemester(id, name) {
            console.log('deleteSemester called with:', id, name);
            deleteSemesterId = id;
            deleteSemesterName = name;
            document.getElementById('deleteSemesterName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteSemesterModal')).show();
        }

        console.log('About to define createSemester function');
        
        function createSemester() {
            console.log('createSemester function called');
            const name = document.getElementById('createSemesterId').value;
            const year = document.getElementById('createSemesterYear').value;
            
            console.log('createSemester - name:', name, 'year:', year);
            
            if (!name || !year) {
                console.log('createSemester - missing name or year, returning');
                return;
            }

            const formData = new FormData();
            formData.append('name', name);
            formData.append('year', year);

            console.log('createSemester - sending fetch request');
            
            fetch('@Url.Action("CreateSemesterAjax", "Admin")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                console.log('createSemester - response received:', data);
                if (data.success) {
                    showToast(data.message, 'success');
                    document.getElementById('createSemesterForm').reset();
                    document.getElementById('createSemester').value = ''; // Clear the visible dropdown input
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.message, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while creating the semester.', 'error');
            });
        }

        console.log('createSemester function defined, type:', typeof createSemester);

        function confirmDeleteSemester() {
            if (!deleteSemesterId) return;

            $.ajax({
                url: '@Url.Action("DeleteSemester", "Admin")',
                type: 'POST',
                data: { id: deleteSemesterId },
                success: function(response) {
                    if (response.success) {
                        bootstrap.Modal.getInstance(document.getElementById('deleteSemesterModal')).hide();
                        showToast(response.message, 'success');
                        
                        // Remove row from table
                        $(`tr[data-semester-id="${deleteSemesterId}"]`).fadeOut(300, function() {
                            $(this).remove();
                            
                            // Check if table is empty
                            if ($('#semestersTable tbody tr:visible').length === 0) {
                                $('#semestersTable tbody').html(`
                                    <tr>
                                        <td colspan="3" class="text-center py-4">
                                            <i class="fas fa-calendar-alt text-muted" style="font-size: 3rem;"></i>
                                            <p class="text-muted mt-3">No semesters found. Create your first semester!</p>
                                        </td>
                                    </tr>
                                `);
                            }
                        });
                    } else {
                        showToast(response.message || 'Failed to delete semester', 'danger');
                    }
                },
                error: function() {
                    showToast('An error occurred while deleting the semester.', 'error');
                }
            });
        }

        function editSemesterAjax() {
            const id = document.getElementById('editSemesterId').value;
            const name = document.getElementById('editSemesterName').value;
            const year = document.getElementById('editSemesterYear').value;

            if (!name || !year) return;

            fetch('@Url.Action("EditSemesterAjax", "Admin")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: id, name: name, year: year })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast(data.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editSemesterModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.message, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred while updating the semester.', 'error');
            });
        }

// Search Semesters Function
$('#semesterSearchInput').on('keyup', function() {
    const searchValue = $(this).val().toLowerCase();
    
    $('#semestersTable tbody tr').each(function() {
        const row = $(this);
        // Skip the "no semesters found" message row
        if (row.attr('id') === 'noResultsMessage') return;
        
        const text = row.text().toLowerCase();
        
        if (text.includes(searchValue)) {
            row.show();
        } else {
            row.hide();
        }
    });
    
    // Show message if no results
    const visibleRows = $('#semestersTable tbody tr:visible').not('#noResultsMessage').length;
    if (visibleRows === 0 && searchValue !== '') {
        if ($('#noResultsMessage').length === 0) {
            $('#semestersTable tbody').append(
                '<tr id="noResultsMessage"><td colspan="4" class="text-center text-muted py-4">' +
                '<i class="fas fa-search" style="font-size: 2rem;"></i>' +
                '<p class="mt-2">No semesters found matching your search.</p>' +
                '</td></tr>'
            );
        }
    } else {
        $('#noResultsMessage').remove();
    }
});

// Searchable dropdown functionality
$('.searchable-dropdown-input').on('focus', function() {
    // Hide all dropdowns first
    $('.searchable-dropdown-menu').hide();
    // Show the corresponding dropdown
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId).show();
});

$('.searchable-dropdown-input').on('input', function() {
    var query = $(this).val().toLowerCase();
    var dropdownId = $(this).attr('id') + 'Dropdown';
    $('#' + dropdownId + ' .dropdown-option').each(function() {
        var text = $(this).text().toLowerCase();
        if (text.includes(query)) {
            $(this).show();
        } else {
            $(this).hide();
        }
    });
});

$('.dropdown-option').on('click', function(e) {
    e.preventDefault();
    var id = $(this).data('id');
    var name = $(this).data('name');
    var input = $(this).closest('.position-relative').find('.searchable-dropdown-input');
    var hidden = $(this).closest('.position-relative').find('input[type="hidden"]');
    input.val(name);
    hidden.val(id);
    $(this).closest('.dropdown-menu').hide();
});

// Hide dropdown when click outside
$(document).on('click', function(e) {
    if (!$(e.target).closest('.position-relative').length) {
        $('.searchable-dropdown-menu').hide();
    }
});

// Bind create semester button click event
$(document).ready(function() {
    console.log('Binding create semester button event');
    $('#createSemesterBtn').on('click', function() {
        console.log('Create semester button clicked');
        createSemester();
    });
});
</script>
}