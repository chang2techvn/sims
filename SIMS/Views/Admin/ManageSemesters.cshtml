@model List<SIMS.Models.Semester>
@{
    ViewData["Title"] = "Manage Semesters";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-calendar-alt"></i> Semesters List</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Semester Name</th>
                                    <th>Year</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var semester in Model.OrderByDescending(s => s.Year).ThenBy(s => s.Name))
                                {
                                    <tr>
                                        <td>
                                            <strong>@semester.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@semester.Year</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-alt text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No semesters found. Create your first semester!</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plus"></i> Add New Semester</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateSemester" method="post">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-calendar"></i> Semester Name
                        </label>
                        <select name="Name" class="form-select" required>
                            <option value="">Select Semester</option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                            <option value="Fall">Fall</option>
                            <option value="Winter">Winter</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt"></i> Year
                        </label>
                        <input name="Year" type="number" class="form-control" placeholder="e.g., 2024" 
                               min="2020" max="2030" value="@DateTime.Now.Year" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-plus"></i> Add Semester
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-chart-line"></i> Semesters by Year</h6>
            </div>
            <div class="card-body">
                @foreach (var yearGroup in Model.GroupBy(s => s.Year).OrderByDescending(g => g.Key))
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <small>Year @yearGroup.Key</small>
                            <small class="badge bg-primary">@yearGroup.Count()</small>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" style="width: @(yearGroup.Count() * 25)%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>