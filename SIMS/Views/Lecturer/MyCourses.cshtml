@model List<SIMS.Models.ViewModels.LecturerCourseViewModel>
@{
    ViewData["Title"] = "My Courses";
}

<!-- Error Message -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Page Header with Statistics -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h2 class="mb-2">
                            <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                            My Teaching Courses
                        </h2>
                        <p class="text-muted mb-0">Manage and view all courses you are currently assigned to teach</p>
                    </div>
                    <div class="col-lg-4">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-card-mini">
                                    <div class="stat-number text-primary">@Model.Count()</div>
                                    <div class="stat-label">Courses</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-card-mini">
                                    <div class="stat-number text-success">@Model.Sum(c => c.StudentCount)</div>
                                    <div class="stat-label">Students</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-card-mini">
                                    <div class="stat-number text-warning">@Model.Select(c => c.Course.Semester).Distinct().Count()</div>
                                    <div class="stat-label">Semesters</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Courses Grid -->
@if (Model.Any())
{
    <div class="row">
        @foreach (var courseViewModel in Model)
        {
            var course = courseViewModel.Course;
            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm course-card">
                    <div class="card-header bg-gradient-primary text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="fas fa-book me-2"></i>
                                    @course.Subject.Name
                                </h6>
                                <small class="opacity-75">@course.Subject.Code</small>
                            </div>
                            <span class="badge bg-white text-primary">@course.Semester.Name @course.Semester.Year</span>
                        </div>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title mb-3">@course.CourseName</h5>

                        <div class="course-info mb-3">
                            <div class="info-item mb-2">
                                <i class="fas fa-graduation-cap text-warning me-2"></i>
                                <span class="text-muted">Major:</span>
                                <strong>@course.Major.Name</strong>
                            </div>

                            <div class="info-item mb-2">
                                <i class="fas fa-users text-success me-2"></i>
                                <span class="text-muted">Enrolled:</span>
                                <strong>@courseViewModel.StudentCount students</strong>
                            </div>

                            <div class="info-item">
                                <i class="fas fa-calendar-alt text-info me-2"></i>
                                <span class="text-muted">Semester:</span>
                                <strong>@course.Semester.Name @course.Semester.Year</strong>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0">
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("CourseStudents", "Lecturer", new { courseId = course.CourseId })"
                               class="btn btn-primary btn-sm flex-fill">
                                <i class="fas fa-users me-1"></i>
                                View Students
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="empty-state-icon mb-4">
                        <i class="fas fa-chalkboard-teacher text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-muted mb-3">No Courses Assigned</h4>
                    <p class="text-muted mb-4">
                        You currently have no courses assigned to teach.<br>
                        Please contact the administrator if you believe this is an error.
                    </p>
                    <button class="btn btn-outline-primary" disabled>
                        <i class="fas fa-refresh me-2"></i>
                        Check for Updates
                    </button>
                </div>
            </div>
        </div>
    </div>
}

