@model List<SIMS.Models.Student>
@{
    ViewData["Title"] = "Course Students";
    var course = ViewBag.Course as SIMS.Models.Course;
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("MyCourses", "Lecturer")" class="text-decoration-none">
                <i class="fas fa-chalkboard-teacher me-1"></i>My Courses
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fas fa-users me-1"></i>@(course?.Subject?.Name ?? "Course") Students
        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">
                            <i class="fas fa-users"></i> Students in @(course?.Subject?.Name ?? "Course")
                        </h5>
                        <small class="opacity-75">@(course?.CourseName ?? "N/A") - @(course?.Semester?.Name ?? "N/A") @(course?.Semester?.Year ?? "")</small>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-white text-primary">@Model.Count() Students</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Avatar</th>
                                    <th>Student ID</th>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                    <th>Major</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(student.User.Avatar))
                                            {
                                                <img src="@student.User.Avatar" alt="Avatar" class="rounded-circle" width="40" height="40">
                                            }
                                            else
                                            {
                                                <i class="fas fa-user-circle text-primary" style="font-size: 2.5rem;"></i>
                                            }
                                        </td>
                                        <td>
                                            <code class="badge bg-info">@student.User.StudentCode</code>
                                        </td>
                                        <td>
                                            <strong>@student.User.Name</strong>
                                        </td>
                                        <td>@student.User.Email</td>
                                        <td>
                                            <span class="badge bg-secondary">@student.Major.Name</span>
                                        </td>
                                        <td>@student.User.Phone</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("_Pagination")
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">No Students Enrolled</h4>
                        <p class="text-muted">No students have enrolled in this course yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-chart-pie"></i> Student Distribution by Major</h6>
                </div>
                <div class="card-body">
                    @foreach (var majorGroup in Model.GroupBy(s => s.Major.Name))
                    {
                        <div class="mb-2">
                            <div class="d-flex justify-content-between">
                                <span>@majorGroup.Key</span>
                                <span class="badge bg-primary">@majorGroup.Count()</span>
                            </div>
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar" style="width: @(majorGroup.Count() * 100.0 / Model.Count)%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> Course Information</h6>
                </div>
                <div class="card-body">
                    <p><strong>Course Code:</strong> @course.Subject.Code</p>
                    <p><strong>Course Name:</strong> @course.CourseName</p>
                    <p><strong>Subject:</strong> @course.Subject.Name</p>
                    <p><strong>Semester:</strong> @course.Semester.Name @course.Semester.Year</p>
                    <p><strong>Major:</strong> @course.Major.Name</p>
                    <p><strong>Enrolled Students:</strong> @Model.Count()</p>
                </div>
            </div>
        </div>
    </div>
}