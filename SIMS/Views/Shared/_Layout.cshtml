<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity!.IsAuthenticated)
    {
        <div class="dashboard-container">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar-header">
                    <div class="logo">
                        <i class="fas fa-graduation-cap"></i>
                        <span>SIMS</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <ul class="nav-menu">
                        @if (User.IsInRole("Admin") || (ViewBag.UserRole?.ToString()?.ToLower() == "admin"))
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Dashboard", "Home")" class="nav-link">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || (ViewBag.UserRole?.ToString()?.ToLower() == "admin"))
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("ManageUsers", "Admin")" class="nav-link">
                                    <i class="fas fa-users"></i>
                                    <span>Manage Users</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ManageDepartments", "Admin")" class="nav-link">
                                    <i class="fas fa-building"></i>
                                    <span>Departments</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ManageMajors", "Admin")" class="nav-link">
                                    <i class="fas fa-graduation-cap"></i>
                                    <span>Majors</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ManageSemesters", "Admin")" class="nav-link">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span>Semesters</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ManageSubjects", "Admin")" class="nav-link">
                                    <i class="fas fa-book"></i>
                                    <span>Subjects</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("ManageCourses", "Admin")" class="nav-link">
                                    <i class="fas fa-chalkboard"></i>
                                    <span>Courses</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("AssignStudentToCourse", "Admin")" class="nav-link">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Assign Students</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Student") || (ViewBag.UserRole?.ToString()?.ToLower() == "student"))
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("MyCourses", "Student")" class="nav-link">
                                    <i class="fas fa-book"></i>
                                    <span>My Courses</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Lecturer") || (ViewBag.UserRole?.ToString()?.ToLower() == "lecturer"))
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("MyCourses", "Lecturer")" class="nav-link">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                    <span>My Courses</span>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="@Url.Action("Profile", "Account")" class="nav-link">
                                <i class="fas fa-user"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <div class="sidebar-footer">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <header class="header">
                    <div class="header-content">
                        <div class="header-title">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                        <div class="header-actions">
                            <div class="user-info">
                                <div class="notifications">
                                    <i class="fas fa-bell"></i>
                                    <span class="notification-badge">3</span>
                                </div>
                                <div class="separator"></div>
                                <a href="@Url.Action("Profile", "Account")" class="user-avatar-link">
                                    <div class="user-avatar">
                                        @if (!string.IsNullOrEmpty(ViewBag.UserAvatar))
                                        {
                                            <img src="@ViewBag.UserAvatar" alt="Avatar" class="user-avatar-img">
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-circle"></i>
                                        }
                                    </div>
                                </a>
                                <div class="user-details">
                                    <h6>@User.Identity.Name</h6>
                                    <small>@ViewBag.UserRole</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <main class="content">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fas fa-check-circle me-2"></i>
                    <span id="successToastMessage">Success!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>

        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <span id="errorToastMessage">Error!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
</body>
</html>
