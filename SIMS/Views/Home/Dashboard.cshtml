@{
    ViewData["Title"] = "Dashboard";
}

<div class="stats-grid">
    @if (ViewBag.UserRole == "admin")
    {
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">Students</div>
                    <div class="stat-value">@ViewBag.TotalStudents</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #ff6b35, #ff8c65);">
                    <i class="fas fa-user-graduate"></i>
                </div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">Lecturers</div>
                    <div class="stat-value">@ViewBag.TotalLecturers</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #34d399);">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">Admins</div>
                    <div class="stat-value">@ViewBag.TotalAdmins</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #fbbf24);">
                    <i class="fas fa-user-shield"></i>
                </div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">Total Users</div>
                    <div class="stat-value">@ViewBag.TotalUsers</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #60a5fa);">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    }
    
    @if (ViewBag.UserRole == "lecturer")
    {
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">My Courses</div>
                    <div class="stat-value">@ViewBag.MyCourses</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #ff6b35, #ff8c65);">
                    <i class="fas fa-chalkboard"></i>
                </div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">My Students</div>
                    <div class="stat-value">@ViewBag.MyStudents</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #34d399);">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    }
    
    @if (ViewBag.UserRole == "student")
    {
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <div class="stat-label">Enrolled Courses</div>
                    <div class="stat-value">@ViewBag.MyCourses</div>
                </div>
                <div class="stat-icon" style="background: linear-gradient(135deg, #ff6b35, #ff8c65);">
                    <i class="fas fa-book-open"></i>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-line"></i> System Overview</h5>
            </div>
            <div class="card-body">
                <h4>Welcome to SIMS, @ViewBag.UserName!</h4>
                <p class="card-text">
                    The Student Information Management System (SIMS) provides a comprehensive platform for managing student data, 
                    course enrollment, and academic records. Navigate through the system using the sidebar menu to access 
                    different functionalities based on your role.
                </p>
                
                @if (ViewBag.UserRole == "admin")
                {
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Administrator Features:</h6>
                        <ul class="mb-0">
                            <li>Manage system users (students, lecturers, admins)</li>
                            <li>Configure departments, majors, and courses</li>
                            <li>Assign students to courses</li>
                            <li>Monitor system statistics and reports</li>
                        </ul>
                    </div>
                }
                
                @if (ViewBag.UserRole == "lecturer")
                {
                    <div class="alert alert-success">
                        <h6><i class="fas fa-chalkboard-teacher"></i> Lecturer Features:</h6>
                        <ul class="mb-0">
                            <li>View and manage assigned courses</li>
                            <li>Access student lists for each course</li>
                            <li>Monitor course enrollment</li>
                            <li>Manage profile information</li>
                        </ul>
                    </div>
                }
                
                @if (ViewBag.UserRole == "student")
                {
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-user-graduate"></i> Student Features:</h6>
                        <ul class="mb-0">
                            <li>View enrolled courses and schedules</li>
                            <li>Browse and enroll in available courses</li>
                            <li>Manage personal profile</li>
                            <li>Access academic information</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-bell"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.UserRole == "admin")
                {
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">
                            <i class="fas fa-users"></i> Manage Users
                        </a>
                        <a href="@Url.Action("ManageCourses", "Admin")" class="btn btn-outline-primary">
                            <i class="fas fa-book"></i> Manage Courses
                        </a>
                        <a href="@Url.Action("AssignStudentToCourse", "Admin")" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus"></i> Assign Students
                        </a>
                    </div>
                }
                
                @if (ViewBag.UserRole == "lecturer")
                {
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("MyCourses", "Lecturer")" class="btn btn-primary">
                            <i class="fas fa-chalkboard"></i> My Courses
                        </a>
                        <a href="@Url.Action("ViewAssignedClasses", "Lecturer")" class="btn btn-outline-primary">
                            <i class="fas fa-users"></i> View Classes
                        </a>
                    </div>
                }
                
                @if (ViewBag.UserRole == "student")
                {
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("MyCourses", "Student")" class="btn btn-primary">
                            <i class="fas fa-book-open"></i> My Courses
                        </a>
                        <a href="@Url.Action("AvailableCourses", "Student")" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i> Browse Courses
                        </a>
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-calendar"></i> Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="text-muted text-center py-3">
                    <i class="fas fa-clock"></i>
                    <p class="mb-0">No recent activity to display</p>
                </div>
            </div>
        </div>
    </div>
</div>