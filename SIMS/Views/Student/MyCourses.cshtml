@model List<SIMS.Models.Course>
@{
    ViewData["Title"] = "My Courses";
}

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var course in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card course-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-book text-primary"></i>
                            @((course.Subject?.Name) ?? "N/A")
                        </h6>
                        <span class="badge bg-primary">@((course.Subject?.Code) ?? "N/A")</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-3">@course.CourseName</h5>
                        
                        <div class="course-details flex-grow-1">
                            <p class="mb-2">
                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                <strong>Lecturer:</strong> @((course.Lecturer?.User?.Name) ?? "TBA")
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-calendar-alt text-info"></i>
                                <strong>Semester:</strong> @((course.Semester?.Name) ?? "N/A") (@course.Semester?.StartDate.ToString("MMM dd, yyyy") - @course.Semester?.EndDate.ToString("MMM dd, yyyy"))
                            </p>
                            
                            <p class="mb-3">
                                <i class="fas fa-graduation-cap text-warning"></i>
                                <strong>Major:</strong> @((course.Major?.Name) ?? "N/A")
                            </p>
                        </div>
                        
                        <div class="mt-auto">
                            <a href="@Url.Action("CourseDetails", "Student", new { courseId = course.CourseId })" class="btn btn-primary btn-sm w-100">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body py-5">
                    <i class="fas fa-book-open text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">No Courses Enrolled</h4>
                    <p class="text-muted">You haven't enrolled in any courses yet. Browse available courses to get started.</p>
                    <a href="@Url.Action("MyCourses", "Student")" class="btn btn-primary">
                        <i class="fas fa-book"></i> View My Courses
                    </a>
                </div>
            </div>
        </div>
    }
</div>
