@model List<SIMS.Models.Course>
@{
    ViewData["Title"] = "My Courses";
}

<div class="row">
    @if (Model.Any())
    {
        @foreach (var course in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-book text-primary"></i>
                            @course.Subject.Name
                        </h6>
                        <span class="badge bg-primary">@course.Subject.Code</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@course.CourseName</h5>
                        
                        <div class="course-details">
                            <p class="mb-2">
                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                <strong>Lecturer:</strong> @course.Lecturer.User.Name
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-calendar-alt text-info"></i>
                                <strong>Semester:</strong> @course.Semester.Name @course.Semester.Year
                            </p>
                            
                            <p class="mb-3">
                                <i class="fas fa-graduation-cap text-warning"></i>
                                <strong>Major:</strong> @course.Major.Name
                            </p>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> View Details
                            </button>
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-download"></i> Materials
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body py-5">
                    <i class="fas fa-book-open text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">No Courses Enrolled</h4>
                    <p class="text-muted">You haven't enrolled in any courses yet. Browse available courses to get started.</p>
                    <a href="@Url.Action("AvailableCourses", "Student")" class="btn btn-primary">
                        <i class="fas fa-search"></i> Browse Available Courses
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> Course Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-primary">@Model.Count()</h3>
                                <p class="text-muted">Total Enrolled</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-success">@Model.Select(c => c.Semester).Distinct().Count()</h3>
                                <p class="text-muted">Semesters</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <h3 class="text-warning">@Model.Select(c => c.Lecturer).Distinct().Count()</h3>
                                <p class="text-muted">Lecturers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}