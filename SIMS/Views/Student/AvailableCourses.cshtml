@model List<SIMS.Models.Course>
@{
    ViewData["Title"] = "Available Courses";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-search"></i> Available Courses for Enrollment</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Browse and enroll in courses available for your major. Click "Enroll Now" to join a course.</p>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @if (Model.Any())
    {
        @foreach (var course in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-book text-primary"></i>
                            @course.Subject.Name
                        </h6>
                        <span class="badge bg-primary">@course.Subject.Code</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.CourseName</h5>
                        
                        <div class="course-details flex-grow-1">
                            <p class="mb-2">
                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                <strong>Lecturer:</strong> @course.Lecturer.User.Name
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-calendar-alt text-info"></i>
                                <strong>Semester:</strong> @course.Semester.Name @course.Semester.Year
                            </p>
                            
                            <p class="mb-3">
                                <i class="fas fa-graduation-cap text-warning"></i>
                                <strong>Major:</strong> @course.Major.Name
                            </p>
                        </div>
                        
                        <div class="mt-auto">
                            <form asp-action="EnrollInCourse" method="post" class="d-inline">
                                <input type="hidden" name="courseId" value="@course.CourseId" />
                                <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to enroll in this course?')">
                                    <i class="fas fa-user-plus"></i> Enroll Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body py-5">
                    <i class="fas fa-graduation-cap text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">No Available Courses</h4>
                    <p class="text-muted">There are currently no available courses for your major, or you're already enrolled in all available courses.</p>
                    <a href="@Url.Action("MyCourses", "Student")" class="btn btn-primary">
                        <i class="fas fa-book-open"></i> View My Courses
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Enrollment Information</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <div class="stat-item">
                                <h3 class="text-primary">@Model.Count()</h3>
                                <p class="text-muted">Courses Available</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stat-item">
                                <h3 class="text-success">@Model.Select(c => c.Lecturer).Distinct().Count()</h3>
                                <p class="text-muted">Different Lecturers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}