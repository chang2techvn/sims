@model List<SIMS.Models.Student>
@{
    ViewData["Title"] = "Course Details";
    var course = ViewBag.Course as SIMS.Models.Course;
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("MyCourses", "Student")" class="text-decoration-none">
                <i class="fas fa-book me-1"></i>My Courses
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fas fa-info-circle me-1"></i>@(course?.Subject?.Name ?? "Course") Details
        </li>
    </ol>
</nav>

<!-- Course Details -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-book"></i> Course Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <h4 class="mb-2">@course?.CourseName</h4>
                        <p class="text-muted mb-3">@course?.Subject?.Name (@course?.Subject?.Code)</p>
                        <div class="d-flex flex-wrap gap-3">
                            <span class="badge bg-primary fs-6 px-3 py-2">
                                <i class="fas fa-graduation-cap me-1"></i>@course?.Major?.Name
                            </span>
                            <span class="badge bg-info fs-6 px-3 py-2">
                                <i class="fas fa-calendar me-1"></i>@course?.Semester?.Name (@course?.Semester?.StartDate.ToString("MMM dd") - @course?.Semester?.EndDate.ToString("MMM dd, yyyy"))
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 text-md-end mt-3 mt-md-0">
                        <div class="lecturer-info">
                            <h6 class="text-muted mb-2">Course Lecturer</h6>
                            <div class="d-flex align-items-center justify-content-md-end">
                                <div class="lecturer-avatar me-3">
                                    <a href="#" class="lecturer-link text-decoration-none" data-bs-toggle="modal" data-bs-target="#lecturerModal">
                                        @if (!string.IsNullOrEmpty(course?.Lecturer?.User?.Avatar))
                                        {
                                            <img src="@course.Lecturer.User.Avatar" alt="Lecturer Avatar" class="rounded-circle lecturer-avatar-img" width="50" height="50">
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-circle fa-2x text-primary lecturer-avatar-icon"></i>
                                        }
                                    </a>
                                </div>
                                <div>
                                    <h6 class="mb-0">
                                        <a href="#" class="text-decoration-none lecturer-link" data-bs-toggle="modal" data-bs-target="#lecturerModal">
                                            @course?.Lecturer?.User?.Name
                                        </a>
                                    </h6>
                                    <small class="text-muted">@course?.Lecturer?.Department?.Name</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Students List -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-users"></i> Enrolled Students (@Model.Count())</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Avatar</th>
                                    <th>Student Name</th>
                                    <th class="d-none d-lg-table-cell">Student Code</th>
                                    <th class="d-none d-lg-table-cell">Major</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td data-label="Avatar" class="text-center">
                                            @if (!string.IsNullOrEmpty(student.User.Avatar))
                                            {
                                                <img src="@student.User.Avatar" alt="Avatar" class="rounded-circle" width="40" height="40">
                                            }
                                            else
                                            {
                                                <i class="fas fa-user-circle text-primary" style="font-size: 2.5rem;"></i>
                                            }
                                        </td>
                                        <td data-label="Student Name">
                                            <div class="d-flex align-items-center">
                                                <div class="ms-2 ms-md-0">
                                                    <strong>@student.User.Name</strong>
                                                    <br class="d-md-none">
                                                    <small class="text-muted d-md-none">@student.User.StudentCode</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-label="Student Code" class="d-none d-lg-table-cell">@student.User.StudentCode</td>
                                        <td data-label="Major" class="d-none d-lg-table-cell">@student.Major.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("_Pagination")
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">No Students Enrolled</h4>
                        <p class="text-muted">No students have enrolled in this course yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Lecturer Info Modal -->
<div class="modal fade" id="lecturerModal" tabindex="-1" aria-labelledby="lecturerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-gradient-orange text-white">
                <h5 class="modal-title fw-bold" id="lecturerModalLabel">
                    <i class="fas fa-user-graduate me-2"></i>Lecturer Information
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <div class="position-relative d-inline-block mb-3">
                        @if (!string.IsNullOrEmpty(course?.Lecturer?.User?.Avatar))
                        {
                            <img src="@course.Lecturer.User.Avatar" alt="Lecturer Avatar" class="rounded-circle border border-3 border-primary shadow" width="100" height="100">
                        }
                        else
                        {
                            <div class="lecturer-avatar-placeholder">
                                <i class="fas fa-user-circle fa-5x text-primary"></i>
                            </div>
                        }
                        <div class="avatar-badge">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                    </div>
                    <h4 class="mb-1 fw-bold text-dark">@course?.Lecturer?.User?.Name</h4>
                    <p class="text-muted mb-0 fw-semibold">@course?.Lecturer?.Department?.Name</p>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-card p-3 rounded-3 border">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <label class="form-label text-muted small mb-0 fw-semibold">Email</label>
                            </div>
                            <p class="mb-0 text-dark">@course?.Lecturer?.User?.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-card p-3 rounded-3 border">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-phone text-primary me-2"></i>
                                <label class="form-label text-muted small mb-0 fw-semibold">Phone</label>
                            </div>
                            <p class="mb-0 text-dark">@(string.IsNullOrEmpty(course?.Lecturer?.User?.Phone) ? "Not provided" : course.Lecturer.User.Phone)</p>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(course?.Lecturer?.User?.Address))
                {
                    <div class="mt-3">
                        <div class="info-card p-3 rounded-3 border">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                <label class="form-label text-muted small mb-0 fw-semibold">Address</label>
                            </div>
                            <p class="mb-0 text-dark">@course.Lecturer.User.Address</p>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>